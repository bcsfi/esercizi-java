<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.bcsoft.bcvinainorefactor.dao.MenuDao">

    <resultMap id="menuResultMap" type="net.bcsoft.bcvinainorefactor.entity.Menu">
        <id property="idMenu" column="id_menu"/>
        <result property="nome" column="focaccia"/>
        <result property="prezzo" column="prezzo"/>
    </resultMap>

    <select id="selectAll" resultMap="menuResultMap">
        SELECT *
        FROM menu
    </select>

    <update id="update" parameterType="net.bcsoft.bcvinainorefactor.entity.Menu">
        UPDATE menu
        SET focaccia = #{nome}, prezzo = #{prezzo}
        WHERE id_menu = #{idMenu}
    </update>
    
</mapper>