<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.bcsoft.bcvinainorefactor.dao.ArticoliOrdineDAO">

    <resultMap id="articoliOrdineResultMap" type="net.bcsoft.bcvinainorefactor.entity.ArticoliOrdine">
        <id property="id" column="id_articoli_ordine"/>
        <result property="idMenu" column="id_menu"/>
        <result property="idOrdine" column="id_ordine"/>
        <result property="quantita" column="quantita"/>
    </resultMap>

    <select id="selectAll" resultMap="articoliOrdineResultMap">
        SELECT *
        FROM articoli_ordine
    </select>

    <insert id="insert" useGeneratedKeys="true">
        INSERT INTO articoli_ordine (id_ordine, id_menu, quantita)
        VALUES (#{idOrdine}, #{articolo.idMenu}, #{articolo.quantita})
    </insert>

    <delete id="delete" parameterType="Integer">
        DELETE FROM articoli_ordine
        WHERE id_ordine = #{id}
    </delete>

</mapper>