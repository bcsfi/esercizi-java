<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.bcsoft.bcvinaino.dao.MenuDAO">

    <resultMap id="menuResultMap" type="net.bcsoft.bcvinaino.entity.Menu">
        <id property="id" column="id_menu"/>
        <result property="nome" column="focaccia"/>
        <result property="prezzo" column="prezzo"/>
    </resultMap>

    <select id="selectAll" resultMap="menuResultMap">
        SELECT * FROM menu
    </select>

    <update id="update" parameterType="net.bcsoft.bcvinaino.entity.Menu">
        UPDATE menu
        SET focaccia = #{nome},
            prezzo = #{prezzo}
        WHERE id_menu = #{id}
    </update>
</mapper>