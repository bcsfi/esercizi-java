<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.bcsoft.bcvinaino.dao.OrdineDAO">


    <select id="selectAll" resultMap="ordineResultMap">
        SELECT * FROM ordini
    </select>

    <resultMap id="ordineResultMap" type="net.bcsoft.bcvinaino.entity.Ordine">
        <id property="idOrdine" column="id_ordine"/>
        <result property="dataOrdine" column="data_ordine"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="idOrdine" keyColumn="id_ordine" parameterType="net.bcsoft.bcvinaino.entity.Ordine" >
        INSERT INTO ordini (data_ordine)
        VALUES (#{dataOrdine})
    </insert>

    <delete id="deleteOrdine" parameterType="net.bcsoft.bcvinaino.entity.Ordine">
        DELETE FROM articoli_ordine WHERE articoli_ordine.id_ordine = #{id};
        DELETE FROM ordini WHERE ordini.id_ordine = #{id}
    </delete>

</mapper>